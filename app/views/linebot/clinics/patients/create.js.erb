
<% if @mode == "binding" %>
<% if @error_code == 1 %>
	$("#linebot_patients_form").replaceWith("<%= j render_relative_partial 'create/no_patient' %>");
<% elsif @error_code == 2 %>
	$("#linebot_patients_form").replaceWith("<%= j render_relative_partial 'create/patient_had_line_account' %>");
<% else %>
	$("#linebot_patients_form").replaceWith("<%= j render_relative_partial 'create/binding_success' %>");
<% end %>

<% elsif @mode == "patient_form" %>
	$("#linebot_patients_form").replaceWith("<%= j render_relative_partial 'create/binding_success' %>");
<% end %>

