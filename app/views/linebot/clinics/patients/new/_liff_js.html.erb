<script src="https://d.line-scdn.net/liff/1.0/sdk.js"></script>
<script type="text/javascript">
	$(function(){
	  liff.init(function (data) {
	  	var userId = data.context.userId;
	  	$("[name='line_user_id']").val(userId);
	  	$.getScript("<%= url_for %>?line_user_id=" + userId);
	  }, function(m){
	  	<% if Rails.env.production? %>
	  	alert("抱歉，找不到此LINE ID");
	  	<% else %>
	  	var userId = "<%= Line::Account.first(2).last.line_user_id %>";
	  	$("[name='line_user_id']").val(userId);
	  	$.getScript("<%= url_for %>?line_user_id=" + userId);
	  	<% end %>
	  });
	})
</script>
