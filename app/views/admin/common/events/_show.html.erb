<%= render partial: "admin/common/show_table" , locals: {
  id: "event",
  resource: @event,
  fields: [
    {k: "id", v: proc{|a| a.id }},
    {t: "醫生", v: proc{|a| a.doctor.try(:name) }},
    {t: "病患", v: proc{|a| a.patient.try(:name) }},
    {t: "LINE", v: proc{|a| a.line_account.try(:display_name) }},
    {t: "項目", v: proc{|a| a.service.try(:name) }},
    {k: "狀態", v: proc{|a| a.status }},
    {k: "日期", v: proc{|a| a.date }},
    {k: "起始時間", v: proc{|a| hour_minute_format(a.hour, a.minute) }},
    {k: "總區間", v: proc{|a| a.duration }},
    {k: "區間", v: proc{|a|
      a.event_durations.map do |ed|
        hour_minute_format(ed.hour, ed.minute)
      end
     }},
    {k: "created_at", v: proc{|a| a.created_at }},
    {k: "updated_at", v: proc{|a| a.updated_at }}
  ]
}
%>
