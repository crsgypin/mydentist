<%= render partial: "admin/common/show_table" , locals: {
  id: "notification",
  resource: @notification,
  fields: [
    {k: "id", v: proc{|a| a.id }},
    {t: "event_id", v: proc{|a| a.event_id }},
    {t: "booking_event_id", v: proc{|a| a.event_id }},
    {t: "狀態", v: proc{|a| a.status }},
    {t: "參數", v: proc{|a| a.args }},
    {t: "Line訊息", v: proc{|a| a.line_sending.messages }},
    {t: "掛號", v: proc{|a| 
      if a.event.present?
        "#{a.event.id} #{a.event.status} #{a.event.desc_format(2)}"
      end
    }},
    {k: "created_at", v: proc{|a| a.created_at }},
    {k: "updated_at", v: proc{|a| a.updated_at }}
  ]
}
%>
