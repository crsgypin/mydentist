<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login_box"}) do |f| %>
  <div class="field">
    <%= f.label "帳號" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "輸入您的Email" %>
  </div>

  <div class="field">
    <%= f.label "密碼" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
    <p class="alignR">
      <%= link_to "忘記密碼?", new_member_password_path, class: "underline" %>
    </p>
  </div>

  <% if false && devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "登入", class: "btnBu" %>
  </div>
<% end %>

