
<div id="event_notification_lightbox" class="lightbox">
	<%= form_tag url_for(action: :create), method: "post", remote: true, class: "inbox" do %>
		<div class="header_box">
			推播訊息
			<p class="note">推播對象：提醒洗牙回診</p>
		</div>
		<div class="content_box">
			<% @events.each do |event| %>
			<%= hidden_field_tag "event_ids[]", event.id %>
			<% end %>
			<%= text_area_tag "text_message", ClinicLine::System.clinic_vacation_change_note %>
		</div>
		<div class="buttons_box">
			<%= link_to "取消", "javascript: $('#event_notification_lightbox').remove()", class: "btnW" %>
			<%= submit_tag "推播", class: "btnBu" %>
		</div>
	<% end %>
</div>
