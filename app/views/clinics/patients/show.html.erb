<div id="patients_show">
  <%= render_relative_partial "show/navbar" %>
  <div class="content_box">
    <div class="main_box">
      <h1>病患個人資料
        <%= link_to "刪除病患", url_for(action: :destroy), method: "delete", class: "remove_btn", remote: true, method: "delete", data: {confirm: "確定移除?"} %>
      </h1>
      <%= form_tag url_for(action: :update), method: "patch", class: "form_box", remote: true do %>
        <%= render_relative_partial "common/table" %>    
        <div class="buttons_box">
          <%= link_to "取消", url_for(action: :index), class: "btnW cancel_btn" %>
          <%= submit_tag "儲存", class: "btnBu save_btn" %>
        </div>
      <% end %>
    </div>
    <div class="side_box">
      <%= render_relative_partial "show/line_messages_box" %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    window.listenerInputChangeNotification({
      inputs: $("#patients_show").find("input,select"),
      leaveLinks: $("#clinic_sidemenu a, #patients_show .show_page_nav a, #patients_show .cancel_btn"),
      saveBtn: $("#patients_show .save_btn")
    })
  });
</script>
