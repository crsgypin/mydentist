<% 
	add_title = "加入"
	remove_title = "移除"
%>

<div id="notification_<%= patient.id %>" class="notification_action">
<%=
if patient.line_account.present?
  if !patient.clinic_patient_notification.present?
    link_to "#{icon_tag(:plus)} #{add_title}".html_safe, clinic_patient_notification_path(@clinic, patient), remote: true, method: "post", class: "add"
  else
    link_to "#{remove_title} #{icon_tag(:arrow_right)}".html_safe, clinic_patient_notification_path(@clinic, patient), remote: true, method: "delete", class: "remove"
  end
else
  "未加入linebot"
end
%>
</div>
