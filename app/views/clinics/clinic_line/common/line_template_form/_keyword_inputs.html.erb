
<ul>
	<% line_template.keywords.each_with_index do |line_keyword, index| %>
	<%= render_relative_partial "keyword_inputs/input", locals: {line_keyword: line_keyword} %>
	<% end %>
</ul>
<div class="add_box">
	<%= link_to icon_tag(:plus_circle), "javascript: window.addLineKeyword();" %>
</div>

<script type="text/javascript">
	$(function(){
		window.addLineKeyword = function(){
			$(".line_templates_form .keywords-box ul").append("<%= j render_relative_partial 'keyword_inputs/input', locals: {line_keyword: Line::Keyword.new} %>");
		}	
		<% if line_template.template_messages.length == 0 %>
			window.addLineKeyword();
		<% end %>
	})
</script>
