
<% row_height = 40 %>
<% if !@doctor_id.present? %>
<%= render_relative_partial "calendar_day/doctors", locals: {
  row_height: row_height
} %>
<% else %>
<% if @segment == "整週" %>
<%= render_relative_partial "calendar_day/doctor_week", locals: {
  row_height: row_height
} %>
<% elsif @segment == "整日" %>
<%= render_relative_partial "calendar_day/doctor_day", locals: {
  row_height: row_height
} %>
<% end %>
<% end %>

<script type="text/javascript">
	$(function(){
    $("#calendar_day .table_box")[0].addEventListener('contextmenu', function(e) {
      e.preventDefault();
    }, false);
	})
	
</script>