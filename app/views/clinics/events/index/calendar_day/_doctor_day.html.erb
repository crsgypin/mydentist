
<div id="calendar_day">
  <div class="header">
  </div>
  <div class="table_box">
  	<% @doctor_day_segment_hour_events.each do |doctor_day_segment_hour_event| %>
  	<div class="d_block">
	    <%= render partial: "clinics/events/common/event_duration_titles_col", locals: {
	      row_height: row_height, 
	      hours: doctor_day_segment_hour_event[:hours]
	    } %>
      <%= render partial: "clinics/events/common/event_duration_values_col", locals: {
      	title: doctor_day_segment_hour_event[:name],
	      title_class: "day_row",
        hour_minute_segments: doctor_day_segment_hour_event[:hour_minute_segments],
        row_height: row_height,
        doctor: @doctor,
        has_vacation: @doctor.has_vacation?(@date),
        onclick_event: proc do |event|
          "$.getScript('#{url_for(action: :edit, id: event)}');"
        end,
        onclick_new_event: proc do |hour, minute|
          # "$.getScript('#{url_for(action: :new, hour: hour, minute: minute)}');"
        end
      } %>
	  </div>
	  <% end %>
  </div>
</div>

