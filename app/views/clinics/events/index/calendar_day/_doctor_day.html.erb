
<div id="calendar_day">
  <div class="header">
  </div>
  <div class="table_box">
  	<% @doctor_day_segment_hour_events.each do |doctor_day_segment_hour_event| %>
  	<div class="d_block">
	    <%= render partial: "clinics/events/common/title_col", locals: {
	      row_height: row_height, 
	      hours: doctor_day_segment_hour_event[:hours]
	    } %>
	    <div class="d_col">
	      <div class="d_row day_row" style="height: <%= row_height %>px;">
	      	<%= doctor_day_segment_hour_event[:name] %>
	      </div>
	      <%= render partial: "clinics/events/common/events_col", locals: {
	        hour_segments: doctor_day_segment_hour_event[:hour_segments],
	        row_height: row_height,
	        onclick_event: proc do |event|
	          "$.getScript('#{url_for(action: :edit, id: event)}');"
	        end,
	        onclick_new_event: proc do |hour, minute|
	          "$.getScript('#{url_for(action: :new, hour: hour, minute: minute)}');"
	        end
	      } %>
	    </div>
	  </div>
	  <% end %>
  </div>
</div>

