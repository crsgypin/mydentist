
<div id="clinic_doctor_doctor_services_index">
	<%= form_tag url_for(action: :create), method: "post", remote: true do %>
	<div class="form_buttons_box">
		<%= link_to "新增", url_for(action: :new), class: "btnBu", remote: true %>
	</div>
	<table class="clinic_table ht80">
		<tr>
			<th>診療項目</th>
			<th>所需時間</th>
			<th>LINE上可預約</th>
			<th></th>
		</tr>
		<% @doctor_services.each_with_index do |doctor_service, index| %>
		<%= render_relative_partial "index/tr", locals: {doctor_service: doctor_service, index: index} %>
		<% end %>
	</table>
	<div class="form_buttons_box">
		<%= submit_tag "儲存", class: "btnBu" %>
	</div>
	<% end %>
</div>
