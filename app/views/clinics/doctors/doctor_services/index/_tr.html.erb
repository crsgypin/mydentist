
<tr>
	<td>
		<%= hidden_field_tag "doctor[doctor_services_attributes][#{index}][id]", doctor_service.id %>
		<%= select_field_tag "doctor[doctor_services_attributes][#{index}][service_id]", doctor_service.service_id, @clinic.services.map{|s| [s.id, s.name]} %>
	</td>
	<td>
		<%= select_field_tag "doctor[doctor_services_attributes][#{index}][duration]", doctor_service.duration, Doctor::Service.durations.keys %>
	</td>
	<td>
		<label class="toggle_switch">
			<%= hidden_field_tag "doctor[doctor_services_attributes][#{index}][has_line_booking]", "無" %>
			<%= check_box_tag "doctor[doctor_services_attributes][#{index}][has_line_booking]", "有",  doctor_service.has_line_booking == "有" %>
		  <span class="slider round"></span>
		</label>
	</td>				
	<td>
		<% if doctor_service.new_record? %>
		<%= link_to "刪除", "javascript:", onclick: "$(this).closest('tr').remove();;" %>
		<% else %>
		<%= link_to "刪除", url_for(action: :destroy, id: doctor_service), method: "delete", remote: true, data: {confirm: "確定要移除?"} %>
		<% end %>
	</td>
</tr>
