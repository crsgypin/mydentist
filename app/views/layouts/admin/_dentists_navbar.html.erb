<% items = [
  {name: "假日設定", link: admin_dentists_sys_sys_holidays_path},
  {name: "診所", link: admin_dentists_clinics_path},
  {name: "醫生", link: admin_dentists_doctors_path},
  # {name: "會員", link: admin_dentists_members_path},
  # {name: "病患", link: admin_dentists_patients_path},
  # {name: "項目", link: admin_dentists_services_path},
